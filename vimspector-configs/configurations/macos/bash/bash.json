{
  "$schema": "https://puremourning.github.io/vimspector/schema/vimspector.schema.json",
  "configurations": {
    "Run Current Script": {
      "adapter": "vscode-bash",
      "configuration": {
        "pathBashdb": "/opt/homebrew/bin/bashdb",
        "request": "launch",
        "program": "${file}",
        "cwd": "${fileDirname}",
        "args": [ "*${args}" ],
        "terminalKind": "integrated"
      }
    }
  }
}
